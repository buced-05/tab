{
  "name": "best",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.js --port 3000 --host",
    "build": "vite build --config config/vite.config.js && npm run generate-sitemaps",
    "lint": "eslint . --ext js,jsx --config config/eslint.config.js --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --config config/vite.config.js",
    "backend:run": "python backend/manage.py runserver 0.0.0.0:8080",
    "backend:migrate": "python backend/manage.py migrate",
    "backend:makemigrations": "python backend/manage.py makemigrations",
    "generate-sitemaps": "node scripts/generate-multilingual-sitemaps.js",
    "seo:generate": "npm run generate-sitemaps",
    "check:esm-imports": "node scripts/utils/check-esm-imports.js",
    "prebuild": "npm run check:esm-imports",
    "git:clean": "node scripts/git/clean-generated-files.js",
    "git:pre-merge": "npm run git:clean",
    "git:pull-safe": "bash scripts/vps/git-pull-safe.sh",
    "git:update-vps": "bash scripts/vps/git-update-vps.sh",
    "vps:start": "bash scripts/vps/start-all-services.sh",
    "test:ga": "bash scripts/test-google-analytics.sh",
    "prepull": "npm run git:clean",
    "premerge": "npm run git:clean"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.1",
    "i18next": "^23.7.8",
    "i18next-browser-languagedetector": "^7.2.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.20.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "rollup-plugin-obfuscator": "^1.1.0",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "xml2js": "^0.6.2"
  }
}
